<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/OptionsMenu_bar"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="104dp"
            android:layout_height="84dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/log_image"/>
        <ImageView
            android:id="@+id/forYou"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/for_button" />
        <ImageView
            android:id="@+id/read"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/forYou"
            app:srcCompat="@drawable/rea_button" />
        <ImageView
            android:id="@+id/look"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/read"
            app:srcCompat="@drawable/loo_button" />
        <ImageView
            android:id="@+id/watch"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/look"
            app:srcCompat="@drawable/watc_button" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/LowerMenu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hom_button"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magazin_button"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/search_button"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/setting_button"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/OptionsMenu_bar"
    android:layout_above="@id/LowerMenu_bar"
    >

    <ImageView
        android:id="@+id/bigPicture"
        android:layout_width="550dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/picture"/>

    <ImageView
        android:id="@+id/small"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_below="@id/bigPicture"
        app:srcCompat="@drawable/small" />
</RelativeLayout>
</RelativeLayout>